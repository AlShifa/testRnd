<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="demo.Customer" table="custTable">
	<composite-id class="demo.CustomerPK" name="pk">
		<key-property name="agentName"  length="5"></key-property>
		<key-property name="compName"  length="5"></key-property>
	</composite-id>
	<property name="address"  length="10"></property>
	
</class>
</hibernate-mapping>
